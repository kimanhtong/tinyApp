<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    <% if (user_id) { %>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <input class="form-control" type="text" name="user" placeholder= "Logged In As: <%= user_id %>" style="width: 300px; margin: 1em; background-color: inherit; border-color:transparent; text-align: right;" disabled>
           <button type="submit" class="btn btn-primary" style = "color: grey; border-color:inherit; background-color:inherit; border-radius: 5px; align-self: right;">Logout</button>
        </div>
      </form>
 
    <% } %>

    <% if (!user_id) { %>
      <div class="navbar-nav" id="navbarNavAltMarkup">
        <a class="nav-item nav-link" href="/login" style="text-align: right;">Log In</a>
        <a class="nav-item nav-link" href="/register" style="text-align: right;">Register</a>
      </div>
    <% } %>

    
 
  </nav>
</header> 

